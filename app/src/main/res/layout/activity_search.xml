<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="@color/black"
    >
    <LinearLayout
        android:id="@+id/linearSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded"
        >

        <TextView
            android:id="@+id/searchSearch"
            android:layout_width="294dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:hint="Search..."
            android:textColorHint="@color/orange" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_search_24"
            android:layout_marginTop="5dp"
            app:tint="@color/orange"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearSearch"
        android:layout_above="@+id/linearNav"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/theloai1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/theloai2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/theloai3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/theloai4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/theloai5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_launcher"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Tracks"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/seeMoreTracks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See more"
                        android:textColor="#D8FFFFFF"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7dp"
                        />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ListView
                        android:id="@+id/lvTopTracks1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:divider="@null"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="20dp"/>
                    <ListView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/lvTopTracks2"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:divider="@null"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="20dp"/>
                    <ListView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/lvTopTracks3"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:divider="@null"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="20dp"/>
                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/top100"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="V Pop"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/top100"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="US/UK"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top New Tracks"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/seeMoreNewTracks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more"
                    android:textColor="#D8FFFFFF"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ListView
                        android:id="@+id/lvTopNewTracks1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:divider="@null"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="20dp"/>
                    <ListView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/lvTopNewTracks2"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:divider="@null"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="20dp"/>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/linearNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:background="#D3000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        >
        <LinearLayout
            android:id="@+id/lyMyFavorites"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/icMyFavorites"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_favorite_24"
                app:tint="@color/orange" />
            <TextView
                android:id="@+id/txtMyFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="My Favorites"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyPlayList"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icPlayList"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_library_music_24"
                app:tint="#CBD3D1D1" />
            <TextView
                android:id="@+id/txtPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="Playlists"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lySearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icSearch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_search_24"
                app:tint="#CBD3D1D1"
                />
            <TextView
                android:id="@+id/txtSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="Search"
                />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/lyMore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icMore"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_more_horiz_24"
                app:tint="#CBD3D1D1"
                />
            <TextView
                android:id="@+id/txtMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#CBD3D1D1"
                android:text="More"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>